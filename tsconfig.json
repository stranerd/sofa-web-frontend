{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"types": [
			"vite/client"
		],
		"typeRoots": ["node_modules", "src/types"],
		"paths": {
			"@app/*": [
				"src/application/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
			"sofa-logic": [
				"src/logic/index.ts"
			],
			"sofa-ui-components": [
				"src/ui-components/index.ts"
			]
		},
		"lib": [
			"es2022",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	],
	"vueCompilerOptions": {
		"narrowingTypesInInlineHandlers": true
	}
}