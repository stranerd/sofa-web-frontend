{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": false,
		"jsx": "preserve",
		"importHelpers": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"vite/client"
		],
		"paths": {
			"@/*": [
				"src/application/*"
			],
			"@app/*": [
				"src/application/*"
			],
			"@modules/*": [
				"node_modules/sofa-modules/src/modules/*"
			],
			"@utils/*": [
				"node_modules/sofa-modules/src/utils/*"
			],
			"sofa-logic": [
				"src/logic/index.ts"
			],
			"sofa-ui-components": [
				"src/ui-components/index.ts"
			]
		},
		"lib": [
			"es2022",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		".d.ts"
	],
	"exclude": [
		"node_modules"
	]
}